<Window x:Class="Version01.PersonDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version01"
        mc:Ignorable="d"
        Title="PersonDetailsWindow" Height="400" Width="300"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="143*"/>
            <RowDefinition Height="241*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="20,20,20,20">
            <Grid>
                <Label Content="Name -" HorizontalAlignment="Left" FontWeight="Bold"></Label>
                <TextBlock x:Name="txtblckName" Margin="55,4,0,-4"></TextBlock>
            </Grid>
            <Grid>
                <Label Content="Last Contact -" HorizontalAlignment="Left" FontWeight="Bold"></Label>
                <TextBlock x:Name="txtblckLastContact" Margin="91,4,0,-4"></TextBlock>
            </Grid>
            <Label Content="Messages" HorizontalAlignment="Center" FontWeight="Bold" Margin="20"></Label>
        </StackPanel>
        <ListBox x:Name="lsbxMessages" Grid.Row="1"  Height="170" VerticalAlignment="Top" Margin="20,8,20,0" />
        <Button Content="Close Window" HorizontalAlignment="Left" Click="btnClose_Click" VerticalAlignment="Bottom" Margin="20,0,0,20" Width="140" Style="{DynamicResource MaterialDesignRaisedSecondaryButton}" Grid.Row="1" Height="32"/>
        <Button Content="Contacted" HorizontalAlignment="Right" Click="btnContacted_Click" VerticalAlignment="Bottom" Margin="0,0,20,20" Width="100" Style="{DynamicResource MaterialDesignRaisedLightButton}" Grid.Row="1" Height="32"/>


    </Grid>
</Window>
