<Window x:Class="Version01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version01"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="666"
        Width="300"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid>
        <TabControl TabStripPlacement="Bottom">

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋"
                                   FontSize="18"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="List"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <ListBox x:Name="lsbxPeople"></ListBox>
                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="➕"
                       FontSize="18"
                       Margin="0,0,8,0"
                       VerticalAlignment="Center"/>
                        <TextBlock Text="Add"
                       FontSize="16"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <TextBlock Text="Content of Tab 1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="24"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>

