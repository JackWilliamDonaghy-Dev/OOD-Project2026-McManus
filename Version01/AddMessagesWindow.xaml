<Window x:Class="Version01.AddMessagesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version01"
        mc:Ignorable="d"
        Title="AddMessagesWindow" Height="400" Width="200"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <TextBox x:Name="txtbxNewMessage" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="170" Height="120"/>
            <Button Content="Add Message" HorizontalAlignment="Center" Click="btnAddMessage_Click" Margin="0,10,0,0"/>
        </StackPanel>
        <Button Content="Close Window" HorizontalAlignment="Center" Click="btnClose_Click" VerticalAlignment="Bottom" Margin="20" Style="{DynamicResource MaterialDesignRaisedSecondaryButton}"/>
    </Grid>
</Window>
