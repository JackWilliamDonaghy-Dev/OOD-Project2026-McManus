<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version01"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Version01.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="750"
        Width="390"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid>
        <TabControl TabStripPlacement="Bottom">

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋"
                                   FontSize="18"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="List"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <ListBox x:Name="lsbxPeople"/>
                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="➕"
                       FontSize="18"
                       Margin="0,0,8,0"
                       VerticalAlignment="Center"/>
                        <TextBlock Text="Add"
                       FontSize="16"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="94*"/>
                        <RowDefinition Height="92*"/>
                        <RowDefinition Height="216*"/>
                        <RowDefinition Height="134*"/>
                        <RowDefinition Height="67*"/>
                    </Grid.RowDefinitions>

                    <Label  Content="New Pulse Details" HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="24" Margin="0,24,0,0" Grid.ColumnSpan="2" Height="40" Width="196"/>

                    <StackPanel Grid.Row="1">
                        <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Margin="40,0,0,0" />
                        <TextBox Grid.Column="1" HorizontalAlignment="Center"  Grid.Row="1" TextWrapping="Wrap" Text="Jack Donaghy" VerticalAlignment="Top" FontSize="16" Width="240"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <Label Content="Frequency"  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Margin="40,0,0,0"/>
                        <materialDesign:NumericUpDown Width="240"/>
                    </StackPanel>



                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>

