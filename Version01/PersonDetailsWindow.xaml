<Window x:Class="Version01.PersonDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version01"
        mc:Ignorable="d"
        Title="PersonDetailsWindow" Height="400" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>

        <StackPanel Margin="20">
            <Label Content="Name" HorizontalAlignment="Center" FontWeight="Bold"></Label>
            <TextBlock x:Name="txtblckName"></TextBlock>
            <Label Content="Messages" HorizontalAlignment="Center" FontWeight="Bold"></Label>
            <ListBox x:Name="lsbxMessages"></ListBox>
        </StackPanel>
        <Button Content="Close Window" HorizontalAlignment="Center" Click="btnClose_Click" VerticalAlignment="Bottom" Margin="20" Style="{DynamicResource MaterialDesignRaisedSecondaryButton}"/>
        
    </Grid>
</Window>
